      "sqlserver": 1433,
      "mysql": 3306,
      "postgresql": 5432,
      "oracle": 1521,
      "teradata": 1025
    },
    "ssl_settings": {
      "require_ssl": true,
      "verify_certificate": true,
      "encrypt_connection": true
    }
